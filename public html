    <script>
        // Mobile Menu Toggle
        const mobileMenu = document.getElementById('mobileMenu');
        const navMenu = document.getElementById('navMenu');
        
        mobileMenu.addEventListener('click', () => {
            navMenu.classList.toggle('show');
            const icon = mobileMenu.querySelector('i');
            icon.classList.toggle('fa-bars');
            icon.classList.toggle('fa-times');
        });

        // Smooth Scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
                // Close mobile menu if open
                navMenu.classList.remove('show');
                const icon = mobileMenu.querySelector('i');
                icon.classList.add('fa-bars');
                icon.classList.remove('fa-times');
            });
        });

        // FAQ Accordion
        document.querySelectorAll('.faq-question').forEach(question => {
            question.addEventListener('click', () => {
                const answer = question.nextElementSibling;
                const icon = question.querySelector('i');
                
                // Close all other open FAQ items
                document.querySelectorAll('.faq-answer').forEach(otherAnswer => {
                    if (otherAnswer !== answer) {
                        otherAnswer.classList.remove('show');
                        otherAnswer.previousElementSibling.querySelector('i').classList.remove('fa-chevron-up');
                        otherAnswer.previousElementSibling.querySelector('i').classList.add('fa-chevron-down');
                    }
                });
                
                answer.classList.toggle('show');
                icon.classList.toggle('fa-chevron-down');
                icon.classList.toggle('fa-chevron-up');
            });
        });

        // Calculator Functionality
        const calculatorForm = document.getElementById('calculatorForm');
        const calculateBtn = document.getElementById('calculateBtn');
        const clearBtn = document.getElementById('clearBtn');
        const resultsContainer = document.getElementById('resultsContainer');
        const messageDiv = document.getElementById('message');

        // Set today's date as default
        document.getElementById('drawDate').valueAsDate = new Date();

        // Format currency
        function formatCurrency(amount) {
            return new Intl.NumberFormat('en-IN', {
                style: 'currency',
                currency: 'INR',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(amount);
        }

        // Show message
        function showMessage(text, type) {
            messageDiv.textContent = text;
            messageDiv.className = `message ${type} show`;
            setTimeout(() => {
                messageDiv.classList.remove('show');
            }, 5000);
        }

        // Validate inputs
        function validateInputs() {
            const prizeAmount = parseFloat(document.getElementById('prizeAmount').value);
            const lotteryType = document.getElementById('lotteryType').value;
            const ticketPrice = parseFloat(document.getElementById('ticketPrice').value);
            const drawDate = document.getElementById('drawDate').value;

            if (!prizeAmount || prizeAmount < 100) {
                showMessage('Please enter a valid prize amount (minimum ₹100)', 'error');
                return false;
            }

            if (prizeAmount > 15000000000) { // 15 crores limit
                showMessage('Prize amount seems too high. Please check your input.', 'error');
                return false;
            }

            if (!lotteryType) {
                showMessage('Please select a lottery type', 'error');
                return false;
            }

            if (!ticketPrice || ticketPrice < 30) {
                showMessage('Please enter a valid ticket price (minimum ₹30)', 'error');
                return false;
            }

            if (!drawDate) {
                showMessage('Please select the draw date', 'error');
                return false;
            }

            // Check if draw date is not in future
            const today = new Date();
            const selectedDate = new Date(drawDate);
            if (selectedDate > today) {
                showMessage('Draw date cannot be in the future', 'error');
                return false;
            }

            return true;
        }

        // Calculate tax
        function calculateTax() {
            if (!validateInputs()) return;

            const prizeAmount = parseFloat(document.getElementById('prizeAmount').value);
            let tdsAmount = 0;
            let tdsRate = 0;

            // TDS calculation logic
            if (prizeAmount > 10000) {
                tdsRate = 30;
                tdsAmount = (prizeAmount * 30) / 100;
            }

            const netAmount = prizeAmount - tdsAmount;

            // Update results
            document.getElementById('grossAmount').textContent = formatCurrency(prizeAmount);
            document.getElementById('tdsAmount').textContent = formatCurrency(tdsAmount);
            document.getElementById('netAmount').textContent = formatCurrency(netAmount);

            // Update breakdown
            document.getElementById('breakdownPrize').textContent = formatCurrency(prizeAmount);
            document.getElementById('breakdownRate').textContent = tdsRate + '%';
            document.getElementById('breakdownTax').textContent = formatCurrency(tdsAmount);
            document.getElementById('breakdownNet').textContent = formatCurrency(netAmount);

            // Show results
            resultsContainer.classList.add('show');
            resultsContainer.scrollIntoView({ behavior: 'smooth' });

            showMessage('Tax calculation completed successfully!', 'success');
        }

        // Clear form
        function clearForm() {
            calculatorForm.reset();
            resultsContainer.classList.remove('show');
            messageDiv.classList.remove('show');
            document.getElementById('drawDate').valueAsDate = new Date();
            showMessage('Form cleared successfully', 'success');
        }

        // Event listeners
        calculateBtn.addEventListener('click', calculateTax);
        clearBtn.addEventListener('click', clearForm);

        // Real-time calculation on input change
        document.getElementById('prizeAmount').addEventListener('input', function() {
            const value = this.value;
            if (value && !isNaN(value) && value > 0) {
                // Auto-calculate after 1 second of no typing
                clearTimeout(this.timeout);
                this.timeout = setTimeout(() => {
                    if (document.getElementById('lotteryType').value) {
                        calculateTax();
                    }
                }, 1000);
            }
        });

        // Save results functionality
        document.getElementById('saveResults').addEventListener('click', function() {
            const prizeAmount = document.getElementById('prizeAmount').value;
            const lotteryType = document.getElementById('lotteryType').value;
            const drawDate = document.getElementById('drawDate').value;
            const grossAmount = document.getElementById('grossAmount').textContent;
            const tdsAmount = document.getElementById('tdsAmount').textContent;
            const netAmount = document.getElementById('netAmount').textContent;

            const resultsText = `
Kerala Lottery Tax Calculation Results
=====================================
Date: ${new Date().toLocaleDateString()}
Lottery Type: ${lotteryType}
Draw Date: ${drawDate}
Prize Amount: ${grossAmount}
TDS (30%): ${tdsAmount}
Net Amount: ${netAmount}
=====================================
Generated by Kerala Lottery Tax Calculator
            `;

            const blob = new Blob([resultsText], { type: 'text/plain' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `lottery-tax-calculation-${new Date().toISOString().split('T')[0]}.txt`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
            
            showMessage('Results saved successfully!', 'success');
        });

        // Form validation styling
        document.querySelectorAll('input, select').forEach(input => {
            input.addEventListener('blur', function() {
                if (this.checkValidity()) {
                    this.style.borderColor = 'var(--secondary-green)';
                } else {
                    this.style.borderColor = 'var(--red)';
                }
            });

            input.addEventListener('focus', function() {
                this.style.borderColor = 'var(--secondary-green)';
            });
        });

        // Lottery type change handler
        document.getElementById('lotteryType').addEventListener('change', function() {
            const ticketPriceInput = document.getElementById('ticketPrice');
            const selectedLottery = this.value;
            
            // Set default ticket prices based on lottery type
            const ticketPrices = {
                'karunya': 40,
                'akshaya': 40,
                'win-win': 30,
                'sthree-sakthi': 40,
                'karunya-plus': 40,
                'nirmal': 40,
                'pournami': 40,
                'vishu-bumper': 300,
                'onam-bumper': 300,
                'xmas-bumper': 300
            };
            
            if (ticketPrices[selectedLottery]) {
                ticketPriceInput.value = ticketPrices[selectedLottery];
            }
        });

        // Add loading animation to calculate button
        calculateBtn.addEventListener('click', function() {
            const originalText = this.innerHTML;
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Calculating...';
            this.disabled = true;
            
            setTimeout(() => {
                this.innerHTML = originalText;
                this.disabled = false;
            }, 1000);
        });

        // Initialize tooltips and help text
        document.addEventListener('DOMContentLoaded', function() {
            // Add help text to inputs
            const helpTexts = {
                'prizeAmount': 'Enter the gross prize amount you won',
                'lotteryType': 'Select the specific Kerala lottery scheme',
                'ticketPrice': 'Enter the price you paid for the ticket',
                'drawDate': 'Select the date when the draw took place'
            };

            Object.keys(helpTexts).forEach(id => {
                const input = document.getElementById(id);
                if (input) {
                    input.title = helpTexts[id];
                    input.setAttribute('data-help', helpTexts[id]);
                }
            });

            // Animate elements on scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -100px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.animation = 'fadeInUp 0.6s ease-out forwards';
                    }
                });
            }, observerOptions);

            // Observe elements for animation
            document.querySelectorAll('.info-card, .lottery-card, .result-card').forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(30px)';
                observer.observe(el);
            });
        });

        // Add keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Ctrl + Enter to calculate
            if (e.ctrlKey && e.key === 'Enter') {
                e.preventDefault();
                calculateTax();
            }
            
            // Escape to clear
            if (e.key === 'Escape') {
                clearForm();
            }
        });

        // Copy results to clipboard functionality
        function copyToClipboard() {
            const resultsText = `
Prize: ${document.getElementById('grossAmount').textContent}
TDS: ${document.getElementById('tdsAmount').textContent}  
Net: ${document.getElementById('netAmount').textContent}
            `.trim();
            
            navigator.clipboard.writeText(resultsText).then(() => {
                showMessage('Results copied to clipboard!', 'success');
            }).catch(() => {
                showMessage('Failed to copy results', 'error');
            });
        }

        // Add copy button to results
        if (navigator.clipboard) {
            const copyButton = document.createElement('button');
            copyButton.innerHTML = '<i class="fas fa-copy"></i> Copy Results';
            copyButton.style.cssText = 'background: var(--primary-green); color: white; border: none; padding: 1rem 2rem; border-radius: 25px; cursor: pointer; margin-left: 1rem;';
            copyButton.onclick = copyToClipboard;
            
            const buttonContainer = document.querySelector('.results-container div[style*="text-align: center"]');
            if (buttonContainer) {
                buttonContainer.appendChild(copyButton);
            }
        }
    </script>
</body>
</html>
